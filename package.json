{
  "name": "md-to-deploy",
  "displayName": "MD to Deploy",
  "description": "deploy your .md files to github pages",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md-to-deploy.openPanel",
        "title": "Open Site Generator Panel"
      }
    ],
    "configuration": {
      "title": "MD to Deploy",
      "properties": {
        "mdToDeploy.siteTitle": {
          "type": "string",
          "description": "Default title for the generated site."
        },
        "mdToDeploy.footerText": {
          "type": "string",
          "default": "Generated by MD to Deploy",
          "description": "Default footer text for the generated site."
        },
        "mdToDeploy.accentColor": {
          "type": "string",
          "default": "#007acc",
          "description": "Default accent color for the generated site."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  }
}
